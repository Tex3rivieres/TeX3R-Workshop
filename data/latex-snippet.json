{
	"Nouveau document": {
		"prefix": "document",
		"body": [
			"\\\\documentclass[graine=${1:2}]{classe-tex3R}\n",
			"\\\\chapitre{${2:nombre}}{${3:nom}}",
			"\\\\niveau{${4:nombre}}\n",
			"\\\\begin{document}",	
			"%La fonction paramètres doit s'utiliser ici, après le begin document\n",
			"$5\n",
			"\\\\end{document}"
		],
		"description": "Permet de créer un nouveau document"
	},

	"Nouveau subfile": {
		"prefix": "subfile",
		"body": [
			"\\\\documentclass[../../../main.tex]{subfiles}\n",
			"\\\\begin{document}",	
			"\n$2\n",
			"\\\\end{document}"
		],
		"description": "Créé un nouveau document subfile"
	},

	"Definition": {
		"prefix": "definition",
		"body": [
			"%%%% DÉFINITION %%%%",
