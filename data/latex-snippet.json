	"Parametres": {
		"prefix": "parametres",
		"body": [
			"\\\\parametres{",
			"\t type=${1:basique%}activite%corrige%cours%TD%DM%DS%interro%flash%brevet",
			"\t ,enonce=${2:false%}true",
			"\t ,correction=${3:false%}true",
			"\t ,theme=${4:false%}true",
			"\t ,difficulte=${5:false%}true",
			"\t ,competence=${6:false%}true",
			"\t ,source=${7:false%}true",
			"\t ,bareme=${8:false%}true",
			"\t ,lignes=${9:false%}carreaux%seyes%surligne",
			"\t ,lignes*=${10:false%}carreaux%seyes%surligne",
			"\t ,titre=${11:false%}true",
			"}$0"
		],
		"description": "Affiche la commande parametres pour personnaliser le document"
	},

	"Parametres*": {
		"prefix": "parametres*",
		"body": [
			"\\\\parametres*{",
			"\t $2%enonce=${3:false%}true",
			"\t $4%,correction=${5:false%}true",
			"\t $6%,theme=${7:false%}true",
			"\t $8%,difficulte=${9:false%}true",
			"\t $10%,competence=${11:false%}true",
			"\t $12%,source=${13:false%}true",
			"\t $14%,bareme=${15:false%}true",
			"\t $16%,lignes=${17:false%}carreaux%seyes%surligne",
			"\t $18%,lignes*=${19:false%}carreaux%seyes%surligne",
			"}$0"
		],
		"description": "Affiche la commande parametres* pour personnaliser le document"
	},


